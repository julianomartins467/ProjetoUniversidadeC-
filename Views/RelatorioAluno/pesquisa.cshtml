@model List<Universidade.Models.AprovacaoAlunoModel>

<div class="text-center">
    <h1 class="display-4">Alunos neste curso</h1>
</div>
<form>

<table class="table" id="tabela">
  <thead>
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">CPF</th>
      <th scope="col">Nota</th>
      <th scope="col">Aprovado</th>
      <th scope="col">Curso</th>
      <th scope="col">Disciplina</th>
    </tr>
  </thead>
  <tbody>
    @foreach(var item in Model)
    {
      <tr>
          <td>@item.nome_aluno</td>
          <td>@item.cpf</td>
          <td>@item.nota</td>
          <td>@{
              if(item.aprovado){                
                  <svg xmlns="http://www.w3.org/2000/svg" width="50" height="30" fill="green" class="bi bi-check-square-fill" viewBox="0 0 16 16">
                  <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm10.03 4.97a.75.75 0 0 1 .011 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.75.75 0 0 1 1.08-.022z"/>
                  </svg>}else{
                    <svg xmlns="http://www.w3.org/2000/svg" width="50" height="30" fill="red" class="bi bi-x-circle" viewBox="0 0 16 16">
                  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                  <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                  </svg>
                  }
            }</td>
          <td>@item.nome_curso</td>
          <td>@item.nome_disciplina</td>
        </tr>
    }
  </tbody>
</table>
</form>