@model Universidade.Models.DisciplinaModel
@{
    ViewData["Title"] = "Editar Disciplina";
}

<div class="text-center">
    <br>
    <h2>Editar Disciplina</h2>
    <br>
</div>

<form>
      <div class="form-group">
        <label asp-for="nome" class="control-label">Nome: </label>
        <input asp-for="nome" class="form-control" readonly desabled/>
        <span asp-validation-for="nome" class="text_danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="carga_horaria" class="control-label">Carga horaria: </label>
        <input asp-for="carga_horaria" class="form-control"/>
        <span asp-validation-for="carga_horaria" class="text_danger"></span>
      </div>
      <br>
      <button type="submit" class="btn btn-primary" asp-controller="Disciplinas" asp-action="Atualizar_post" asp-route-id="@Model.id">Registrar</button>
      <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Voltar</a>
</form>